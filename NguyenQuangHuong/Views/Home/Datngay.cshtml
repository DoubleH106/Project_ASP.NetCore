@model NguyenQuangHuong.Models.ServiceBooking

@{
	ViewData["Title"] = "Datngay";
	Layout = "~/Views/Shared/_Layout.cshtml";
}
<div style="text-align: center;"><h1>Đăng Ký Dịch Vụ</h1></div>
@*<div style="text-align:center">
