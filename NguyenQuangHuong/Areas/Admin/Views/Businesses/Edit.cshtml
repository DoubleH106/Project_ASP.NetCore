@model NguyenQuangHuong.Models.Business

@{
	ViewData["Title"] = "Edit";
	Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>Edit</h1>

<h4>Business</h4>
<hr />
<div class="row">
	<div class="col-md-4">
		<form asp-action="Edit" method="post" enctype="multipart/form-data">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<input type="hidden" asp-for="Id" />
			<div class="form-group">
				<label asp-for="BusinesName" class="control-label"></label>
				<input asp-for="BusinesName" class="form-control" />
				<span asp-validation-for="BusinesName" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Thumbnail" class="control-label"></label>
				<input asp-for="Thumbnail" type="file" name="img" class="form-control" />
				<span asp-validation-for="Thumbnail" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Description" class="control-label"></label>
				<input asp-for="Description" class="form-control" />
				<span asp-validation-for="Description" class="text-danger"></span>
			</div>
			<div class="form-group">
				<input type="submit" value="Save" class="btn btn-primary" />
			</div>
		</form>
	</div>
</div>

<div>
	<a asp-action="Index">Back to List</a>
</div>

