@model IEnumerable<NguyenQuangHuong.Models.Business>

@{
	ViewData["Title"] = "Index";
	Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1 style="text-align:center">Danh Sách Kinh Doanh</h1>

<p>
	<a asp-action="Create" class="btn btn-danger">Thêm Mục Kinh Doanh Mới</a>
</p>
<table class="table table-striped table-dark">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.BusinesName)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Thumbnail)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Description)
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.BusinesName)
				</td>
				<td>
					<img src="~/Img/ImgServicess/@item.Thumbnail" width="50px" />
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Description)
				</td>
				<td>
					<a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-danger">E</a> 
					<a asp-action="Details" asp-route-id="@item.Id" class="btn btn-danger">D</a> 
					<a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">X</a>
				</td>
			</tr>
		}
	</tbody>
</table>
