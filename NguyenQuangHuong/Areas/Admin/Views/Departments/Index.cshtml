@model IEnumerable<NguyenQuangHuong.Models.Department>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1 style="text-align:center">Danh Sách Các Phòng</h1>

<p>
    <a asp-action="Create" class="btn btn-danger">Thêm Phòng Mới</a>
</p>
<table class="table table-striped table-dark">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DepartmentName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Location)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DepartmentName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Location)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.DepartmentId" class="btn btn-danger">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.DepartmentId" class="btn btn-danger">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.DepartmentId" class="btn btn-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
